{
  "extends": ["eslint:recommended", "airbnb", "prettier"],
  "plugins": ["prettier", "mocha"],
  "rules": {
    "prettier/prettier": ["error"],
    "mocha/no-exclusive-tests": "error",
    "import/prefer-default-export": false
  },
  "globals": {
    "window": true,
    "document": true,
    "localStorage": true,
    "FormData": true,
    "FileReader": true,
    "Blob": true,
    "navigator": true
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "no-unused-vars": [
          "error",
          {
            "varsIgnorePattern": "should|expect|describe|it"
          }
        ]
      }
    }
  ]
}
